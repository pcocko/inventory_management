<%= render :partial => 'top_menu' %>
<h2><%= l('inventory_stock') %></h2>
<%= form_tag do %>
  <label><%= l('Warehouse') %></label>
  <%= select_tag(:warehouse, options_for_select(@warehouses,params[:warehouse]),{:onchange=>'submit();'}) %>
  <input type='button' value='<%= l('export').capitalize %> CSV' onclick="location.href='/inventory/inventory_stock_xls?warehouse='+$('#warehouse').val()" />
<% end %>
<table id='inventory_stock' cellspacing='0' cellpadding='4' border='1' style='border: 1px solid black;font-size:10px;border-collapse:collapse;'>
  <tr>
    <th><%= l('field_short_part_number') %></th><th><%= l('Category') %></th><th><%= l('field_manufacturer') %></th><th><%= l('field_description') %></th>
    <th><%= l('field_warehouse_from') %></th>
    <th><%= l('field_warehouse_location') %></th>
    <th><%= l('stock') %></th>
    <th><%= l('status') %></th>
    <% if (User.current.admin?) || (User.current.allowed_to?(:inventory_aca, nil, :global => true)) %>
      <td>Propetari</td>
    <% end %>
    </tr>
   <% 
   total = 0
	 @stock.each do |s| %>
  <tr>
   <td><%= s[0] %><% if s[1] and s[1].length > 0 %> (<%= s[1] %>)<% end %></td>
   <td><%= s[3] %></td>
   <td><%= s[2] %></td>
   <td><%= s[4] %></td>
   <td><%= s[5] %></td>
   <td><%= s[6] %></td>
   
   <td align='right'><b><%= s[12] %></b></td>
   <td><%= @statuses_array[s[7]] %></td>
   <% if (User.current.admin?) || (User.current.allowed_to?(:inventory_aca, nil, :global => true))%>
    <td><b><%= @property_array[s[8]] %></b></td>
   <% end %> 
  </tr>
   <% 
    total += s[9].to_f*s[12].to_f 
   end %>
   
</table>

